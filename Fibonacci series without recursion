#include <stdio.h>

int main() {
    int num, i, term1 = 0, term2 = 1, nextTerm;

    printf("Enter the number of terms: ");
    scanf("%d", &num);

    printf("Fibonacci Series: %d, %d, ", term1, term2);

    // generate the Fibonacci series
    for (i = 3; i <= num; i++) {
        nextTerm = term1 + term2;
        printf("%d, ", nextTerm);
        term1 = term2;
        term2 = nextTerm;
    }

    return 0;
}
